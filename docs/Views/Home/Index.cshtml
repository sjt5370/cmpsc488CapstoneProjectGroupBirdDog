@{
    ViewData["Title"] = "Home Page";
}

<style>
    carousel-inner.p {
        
        
    }
</style>

<div id="myCarousel" class="carousel slide" data-ride="carousel" data-interval="6000">
    <ol class="carousel-indicators">
        <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
        <li data-target="#myCarousel" data-slide-to="1"></li>
        <li data-target="#myCarousel" data-slide-to="2"></li>
    </ol>
    <div class="carousel-inner" role="listbox">
        <div class="item active">
            <img src="~/images/AndApp.jpg" alt="ASP.NET" class="img-responsive" />
            <div class="carousel-caption" role="option">
                <p style="color: black; -webkit-text-fill-color: white; -webkit-text-stroke-width: 1px; -webkit-text-stroke-color: black; font-size: 40px;">
                    An android app to manage stocking and picking of warehouse products.

                </p>
                <a style ="font-size: 30px; width:200px"class="btn btn-default" href="~/Home/Download">
                    Download
                </a>
            </div>
        </div>
        <div class="item">
            <img src="~/images/Desktop.png" alt="Visual Studio" class="img-responsive" />
            <div class="carousel-caption" role="option">
                <p style="color: black; -webkit-text-fill-color: white; -webkit-text-stroke-width: 1px; -webkit-text-stroke-color: black; font-size: 40px;">
                    A desktop app to manage your warehouse data.

                </p>
                <a style ="font-size: 30px; width:200px"class="btn btn-default" href="~/Home/Download">
                    Download
                </a>
            </div>
        </div>
        <div class="item">
            <img src="~/images/Website.png" alt="Microsoft Azure" class="img-responsive" />
            <div class="carousel-caption" role="option">
                <p style="color: black; -webkit-text-fill-color: white; -webkit-text-stroke-width: 1px; -webkit-text-stroke-color: black; font-size: 40px;">
                    A website for customers to place and review orders.

                </p>
                <a style ="font-size: 30px; width:200px" class="btn btn-default" href="~/Home/Download">
                    Visit
                </a>
            </div>
        </div>
    </div>
    <a class="left carousel-control" href="#myCarousel" role="button" data-slide="prev">
        <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
    </a>
    <a class="right carousel-control" href="#myCarousel" role="button" data-slide="next">
        <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
    </a>
</div>
